<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_online_blank"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/anim_circle"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_alignTop="@+id/img_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-90dp"
            android:src="@drawable/bitmap_circle_anim" />

        <Button
            android:id="@+id/btn_Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/anim_circle"
            android:background="@drawable/bg_play"
            android:gravity="center"
            android:text="NOW PLAY"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_HightSore"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_below="@id/btn_Play"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_hight_score"
            android:gravity="center"
            android:text="HighScore"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>