<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.nth.demoailatrieuphu.model.ItemScore" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người chơi:"
                android:textColor="#ff0d664e"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                updateText="@{item.name}"
                android:id="@+id/txt_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="nguyen van a"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thưởng:"
                android:textColor="#ff0d664e"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                updateText="@{item.money}"
                android:id="@+id/txt_Money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="2,000,000 VNĐ"
                android:textColor="#0014F5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu hỏi qua"
                android:textColor="#ff0d664e"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                updateText="@{item.level}"
                android:id="@+id/txt_Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Câu 1"
                android:textColor="#03A9F4"
                android:textSize="20dp" />
        </TableRow>
        <TableRow></TableRow>
    </TableLayout>
</LinearLayout>
</layout>